<!doctype html>
<html lang="en" itemscope itemtype="http://schema.org/Webpage">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>{{ metadata.title }}</title>
  <link rel="preload" href="/static/fonts/Lato-Regular.woff2" as="font" type="font/woff2" crossorigin="anonymous">
  <link rel="preload" href="/static/fonts/Lato-Black.woff2" as="font" type="font/woff2" crossorigin="anonymous">
  <meta name="description" content="{{ metadata.description }}">
  <meta name="author" content="{{ metadata.author }}" />
  <meta property="og:title" content="{{ metadata.title }}">
  <meta property="og:description" content="{{ metadata.description }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ metadata.url }}">
  <link rel="stylesheet" href="/app.css" as="style">
</head>
<body>
  {% include "header.njk" %}
  <main>
    {{ content | safe }}
  </main>
  {% include "footer.njk" %}
  <script>
  window.addEventListener('DOMContentLoaded', (event) => {
    let brandedLocationOrigin = location.search.slice(1).trim();
    if (brandedLocationOrigin) {
      if (brandedLocationOrigin.endsWith('/')) {
        brandedLocationOrigin = brandedLocationOrigin.slice(1);
      }
      const brandableAnchors = document.querySelectorAll('[data-brandable-anchor]');
      brandableAnchors.forEach(brandableAnchor => {
        const { pathname } = brandableAnchor;
        brandableAnchor.setAttribute('href', `${brandedLocationOrigin}${pathname}`);
      });
    }
  });
  </script>
  <script type="text/javascript" src="/app.js" async></script>
</body>
</html>
